<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.ViewProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="500dp"
        android:gravity="top">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:text="Email:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nameSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Name and Surname:"
            android:textSize="16sp"

            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/userNameSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Username:"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/userUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Height:"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/usertHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Gender:"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/userGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/acitvityFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="ActivityFrequency:"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/userActivityFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:textSize="16sp"
            android:drawablePadding="8dp" />

    </LinearLayout>
</ScrollView>